#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<assembly>

    <id>zip-build</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>target/classes/</directory>
            <outputDirectory></outputDirectory>
            <useDefaultExcludes>false</useDefaultExcludes>
            <excludes>
                <exclude>**/.svn/*</exclude>
                <exclude>magento_bootstrap.php</exclude>
            </excludes>
        </fileSet>
    </fileSets>

</assembly>