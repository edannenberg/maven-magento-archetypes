		</schema>
	</types>

	<!-- define req/response message signatures -->
	<message name="${magentoModuleNameLowerCase}ApinameHelloWorldRequest">
		<!-- the sessionId is mandatory for every request,
			 your api method will be called without it tho -->
		<part name="sessionId" type="xsd:string" />
		<part name="name" type="xsd:string" />
	</message>
	<message name="${magentoModuleNameLowerCase}ApinameHelloWorldResponse">
		<part name="greeting" type="xsd:string" />
	</message>
	
	<!-- link port operations to req/response messages from above -->
	<portType name="{{var wsdl.handler}}PortType">
		<operation name="${magentoModuleNameLowerCase}ApinameMyMethodName">
			<documentation>Says hi!</documentation>
			<input message="typens:${magentoModuleNameLowerCase}ApinameHelloWorldRequest" />
			<output message="typens:${magentoModuleNameLowerCase}ApinameHelloWorldResponse" />
		</operation>
	</portType>
	
	<!-- bind port operations to soap, rpc style -->
	<binding name="{{var wsdl.handler}}Binding" type="typens:{{var wsdl.handler}}PortType">
		<soap:binding style="rpc" transport="http://schemas.xmlsoap.org/soap/http" />
		<operation name="${magentoModuleNameLowerCase}ApinameMyMethodName">
			<soap:operation soapAction="urn:{{var wsdl.handler}}Action" />
			<input>
				<soap:body namespace="urn:{{var wsdl.name}}" use="encoded" encodingStyle="http://schemas.xmlsoap.org/soap/encoding/" />
			</input>
			<output>
				<soap:body namespace="urn:{{var wsdl.name}}" use="encoded" encodingStyle="http://schemas.xmlsoap.org/soap/encoding/" />
			</output>
		</operation>
	</binding>

	<!-- leave as is -->
	<service name="{{var wsdl.name}}Service">
		<port name="{{var wsdl.handler}}Port" binding="typens:{{var wsdl.handler}}Binding">
			<soap:address location="{{var wsdl.url}}" />
		</port>
	</service>

</definitions>