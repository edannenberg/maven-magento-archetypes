<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>de.bbe-consulting.maven.archetype</groupId>
		<artifactId>magento-archetypes</artifactId>
		<version>0.9.8</version>
	</parent>

	<groupId>de.bbe-consulting.maven.archetype</groupId>
	<artifactId>magento-empty-submodule-archetype</artifactId>
	<packaging>maven-archetype</packaging>

	<name>Magento Empty SubModule Archetype</name>
	<description>Barebone Magento module for multimodule projects</description>

	<dependencies>
		<dependency>
			<groupId>de.bbe-consulting.maven.archetype</groupId>
			<artifactId>magento-archetype-base</artifactId>
			<version>0.9.8</version>
			<scope>compile</scope>
		</dependency>
	</dependencies>

	<build>
	
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.4</version>
				<executions>
					<execution>
						<id>copy</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>de.bbe-consulting.maven.archetype</groupId>
									<artifactId>magento-archetype-base</artifactId>
									<version>0.9.8</version>
									<type>jar</type>
									<overWrite>false</overWrite>
									<excludes>META-INF/maven/archetype-metadata.xml,archetype-resources/pom.xml,archetype-resources/license.header,archetype-resources/src/site/site.xml</excludes>
								</artifactItem>
							</artifactItems>
							<outputDirectory>${project.build.directory}/classes</outputDirectory>
							<overWriteReleases>false</overWriteReleases>
							<overWriteSnapshots>false</overWriteSnapshots>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.5</version>
				<configuration>
					<overwrite>true</overwrite>
				</configuration>
			</plugin>
		</plugins>
		
		<extensions>
			<extension>
				<groupId>org.apache.maven.archetype</groupId>
				<artifactId>archetype-packaging</artifactId>
				<version>2.2</version>
			</extension>
		</extensions>

		<pluginManagement>
			<plugins>
				<plugin>
					<artifactId>maven-archetype-plugin</artifactId>
					<version>2.2</version>
				</plugin>
			</plugins>
		</pluginManagement>
		
	</build>

</project>
