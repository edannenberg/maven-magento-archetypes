<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd"
	name="mymodule"
	xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<requiredProperties>
		<requiredProperty key="magentoModuleName" />
		<requiredProperty key="magentoModuleNameLowerCase" />
		<requiredProperty key="magentoNameSpace" />
		<requiredProperty key="magentoModuleType" />
	</requiredProperties>
	<fileSets>
		<fileSet filtered="true" encoding="UTF-8">
			<directory>src/main/assembly</directory>
			<includes>
				<include>**/*.xml</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" encoding="UTF-8">
			<directory>src/main/php</directory>
			<includes>
				<include>**/*.php</include>
				<include>**/*.csv</include>
				<include>**/*.phtml</include>
				<include>**/*.xml</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" encoding="UTF-8">
			<directory>src/test</directory>
			<includes>
				<include>**/*.xml</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" encoding="UTF-8">
			<directory>src/test/php</directory>
			<includes>
				<include>**/*.php</include>
				<include>**/*.yaml</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" encoding="UTF-8">
			<directory>src/site</directory>
			<includes>
				<include>**/*.apt</include>
				<include>**/*.config</include>
				<include>**/*.fml</include>
				<include>**/*.xml</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" encoding="UTF-8">
			<directory></directory>
			<includes>
				<include>build.xml</include>
				<include>license.header</include>
			</includes>
		</fileSet>
	</fileSets>
</archetype-descriptor>
